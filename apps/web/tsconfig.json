{
  "extends": "@hey/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "webworker"
    ],
    "paths": {
      "@components*": [
        "src/components*"
      ],
      "@lib*": [
        "src/lib*"
      ],
      "@gql*": [
        "src/graphql*"
      ],
      "@generated*": [
        "src/generated*"
      ],
      "@sw/*": [
        "src/sw/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}